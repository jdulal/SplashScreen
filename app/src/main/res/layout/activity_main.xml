<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/splash_screen_bg"
    tools:context="com.bracesmedia.splashscreen.MainActivity">
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/companyLogo"
        android:src="@drawable/braces_brand_logo"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/colorTitleColor"
        android:textStyle="bold"
        android:text="BRACES MEDIA NEPAL"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:id="@+id/mainTitle"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/colorTitleColor"
        android:id="@+id/subTitle"
        android:text="Web/App Development Company"
        android:textAlignment="center"/>



</LinearLayout>
